{% extends "layout.njk" %}

{% block pagina %}
	
	<h1>Cadastro de Musicas</h1>
	
	<form action="/edit/{{musica.id}}" method="post">

		<input type="hidden" name="_method" value="PUT"/>
		
		<div class="form-group">
			<label>ID</label>
			<p class="form-control" id="nome">{{musica.id}}</p>
		</div>
		<div class="form-group">
			<label for="nome">Nome da musica</label>
			<input type="text" class="form-control" name="nome" id="nome" placeholder="Nome" value="{{musica.nome}}">
		</div>
		<div class="form-group">
			<label for="artista">Nome do artista</label>
			<input type="text" class="form-control" name="artista" id="artista" placeholder="Artista" value="{{musica.artista}}">
		</div>
		<div class="form-group">
			<label for="estrelas">Total de estrelas</label>
			<input type="text" class="form-control" name="estrelas" id="estrelas" placeholder="Estrelas" value="{{musica.estrelas}}">
		</div>

		<button type="submit" class="btn btn-primary">Alterar Musica</button>
		
		<a href="#" class="btn btn-default">Voltar</a>
	</form>

{% endblock %}