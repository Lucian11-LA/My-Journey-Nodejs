{% extends "layout.njk" %}

{% block pagina %}
	//codigo da pagina
	
	<h1>Cadastro de Musicas</h1>
	
	<form>
		<div class="form-group">
			<label for="nome">Nome da musica</label>
			<input type="text" class="form-control" name="nome" id="nome" placeholder="Nome">
		</div>
		<div class="form-group">
			<label for="artista">Nome do artista</label>
			<input type="text" class="form-control" name="artista" id="artista" placeholder="Artista">
		</div>
		<div class="form-group">
			<label for="estrelas">Total de estrelas</label>
			<input type="text" class="form-control" name="estrelas" id="estrelas" placeholder="Estrelas">
		</div>

		<button type="submit" class="btn btn-primary">Cadastrar Musica</button>
		<a href="#" class="btn btn-default">Voltar</a>
	</form>
{% endblock %}